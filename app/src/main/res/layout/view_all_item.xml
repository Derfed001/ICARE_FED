    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/border"
            android:scaleType="centerInside"
            android:src="@drawable/hunger"
            android:id="@+id/img_viewall"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:paddingStart="5dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/descr_viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:paddingStart="5dp"
                android:ellipsize="end"
                android:layout_marginTop="1dp"
                android:maxLines="2"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"
                android:id="@+id/benefit_viewall"
                android:text="Beneficiary name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingStart="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:id="@+id/contact_viewall"
                android:text="Contact"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/amount_viewall"
                android:text="Donation amount"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:id="@+id/period_viewall"
                android:text="Period"/>
        </LinearLayout>
    </LinearLayout>

