<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/donorName_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:hint="Donor Name"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="#040303"
                android:textColorHint="#090909"
                android:textColorLink="#050505"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/donor_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/resend_code_drawable"
                android:paddingStart="5dp"
                android:text="Email"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textColorHighlight="#040303"
                android:textColorHint="#090909"
                android:textColorLink="#050505"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/donor_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor contact"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/donor_interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Donor interests"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>